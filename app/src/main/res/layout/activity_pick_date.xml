<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.date.PickDateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="back"
            android:background="@drawable/cancel" />

        <TextView
            android:id="@+id/title_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="7"
            android:fontFamily="@font/nanum_square_round_r"
            android:gravity="center"
            android:visibility="invisible"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="match_parent" />

    </LinearLayout>


    <TextView
        android:id="@+id/PD_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nanum_square_round_r"
        android:gravity="center"
        android:text="대만여행"
        android:textColor="@color/places_autocomplete_prediction_secondary_text"
        android:textSize="36sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/PD_rView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="2.5"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/PD_photoBtn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_gravity="right|center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/album_icon" />

        <ImageView
            android:id="@+id/PD_moneyBtn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_gravity="right|center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/money_icon" />


    </LinearLayout>

</LinearLayout>
