<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UI.date.ShowDateActivity">
    <ImageView
        android:id="@+id/cancel_bt"
        android:onClick="back"
        android:background="@drawable/cancel"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sd_leftImg"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/back" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sd_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="bottom|left"
                android:text="대만여행-DAY1"
                android:textColor="@color/colorPrimary"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/sd_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:gravity="center_vertical|left"
                android:text="2018.12.01"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sd_rightImg"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/next" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/sd_layout_tab"
            android:background="@drawable/grad1"
            app:tabMode="fixed"
            app:tabTextColor="#000000"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
    >
    </android.support.design.widget.TabLayout>
    <konkukSW.MP2019.roadline.Data.Adapter.mViewPager android:layout_width="match_parent"
                                       android:layout_height="0dp"
                                        android:background="@color/white"
                                       android:id="@+id/sd_viewPager"
                                       android:layout_weight="8">
    </konkukSW.MP2019.roadline.Data.Adapter.mViewPager>
    <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent" android:layout_height="0dp">
        <ImageView
            android:id="@+id/sd_imgBtn1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/album_icon" />

        <ImageView
            android:id="@+id/sd_imgBtn2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/money_icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sd_imgBtn3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp"
                android:foregroundGravity="right"
                app:srcCompat="@drawable/share_icon" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
