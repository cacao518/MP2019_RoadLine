<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="240dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
<ImageView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3"
        android:id="@+id/MLItem_image"/>
            <TextView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                      android:id="@+id/MLItem_title" android:textSize="20dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                      android:id="@+id/MLItem_date" android:textSize="12dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>