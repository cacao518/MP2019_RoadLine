<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="konkukSW.MP2019.roadline.UI.date.AddSpotActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_height="0dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="3dp">

            <fragment
                android:id="@+id/AS_SearchBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name=
                    "com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                />
        </android.support.v7.widget.CardView>
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/AS_MapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/as_button_memo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/plan_add_btn" />

        <ImageView
            android:id="@+id/as_button_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/plan_add_btn" />

        <ImageView
            android:id="@+id/as_button_check"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/plan_confirm_btn" />
    </LinearLayout>

</LinearLayout>
