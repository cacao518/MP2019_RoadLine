<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.money.AddMoneyActivity">

    <ImageView
        android:id="@+id/addMoneyImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="2.5"
        android:onClick="addImg"
        android:scaleType="fitCenter"
        android:src="@drawable/photo_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textColor="#60aebf"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <EditText
                android:id="@+id/priceTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:paddingRight="10dp"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="$"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/addMoneyExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingRight="30dp"
            android:text="1193원"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textColor="#60aebf"
            android:textSize="23sp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/categoryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mealBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="식사" />
            <!--android:button="@drawable/meal_btn"-->
            <RadioButton
                android:id="@+id/shoppingBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="쇼핑" />
            <!--android:button="@drawable/shopping_btn"-->
            <RadioButton
                android:id="@+id/transportBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="교통" />
            <!--android:button="@drawable/transport_btn"-->
            <RadioButton
                android:id="@+id/tourBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="관광" />
            <!--android:button="@drawable/tour_btn"-->
            <RadioButton
                android:id="@+id/lodgmentBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="숙박" />
            <!--android:button="@drawable/lodgment_btn"-->
            <RadioButton
                android:id="@+id/etcBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기타" />
            <!--android:button="@drawable/etc_btn"-->
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/addMoneyCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#eeeeee"
            android:onClick="cancelBtn"
            android:text="CANCEL"
            android:textColor="#777777" />

        <Button
            android:id="@+id/addMoneySubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#eeeeee"
            android:onClick="submitBtn"
            android:text="SUBMIT"
            android:textColor="#60aebf"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
